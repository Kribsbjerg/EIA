<Window x:Class="EIAUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:EIAUI"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        x:Name="AppWindow"
        Title="MainWindow" 
        Width="400"
        Height="1080"
        MaxWidth="400"
        MaxHeight="1080"
        Left="1320"
        WindowStartupLocation="Manual" 
        Top="0">

    <Window.Resources>
        
        
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <!-- Outer border with the dropshadow margin -->
                        <Border Padding="{Binding OuterMarginSizeThickness}">

                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" Opacity="0.6" BlurRadius="10" />
                            </Border.Effect>

                            <!-- Main Window outline -->
                            <Grid>

                                <!-- Opacity mask for corners on grid -->
                                <Border x:Name="Container"
                                        Background="{StaticResource BackgroundColorBrush}"
                                        CornerRadius="{Binding WindowCornerRadius, FallbackValue=1}" />

                                <!-- Main window with resizable outline margin -->
                                <Border CornerRadius="{Binding WindowCornerRadius, FallbackValue=1}"
                                        Background="White">
                                    
                                </Border>

                                <!-- The main window content -->
                                <Grid>
                                    <Grid.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Container}" />
                                    </Grid.OpacityMask>

                                    <Grid.RowDefinitions>

                                        <!-- Title Bar -->
                                        <RowDefinition Height="100" />

                                        <!-- Window Content -->
                                        <RowDefinition Height="auto" />

                                    </Grid.RowDefinitions>

                                    <!-- Title Bar -->
                                    <Grid Grid.Column="0" Panel.ZIndex="1">

                                        <Grid.ColumnDefinitions>
                                            <!-- Slide in icon -->
                                            <ColumnDefinition Width="*" />
                                            <!-- Logo -->
                                            <ColumnDefinition Width="7*" />
                                            <!-- Windows buttons -->
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Slide in icon -->
                                        <Button Grid.Column="0" Command="{Binding MinimizeCommand}" Content=">" Style="{StaticResource WindowControlButton}" />

                                        <!-- Logo -->
                                        <Image Grid.Column="1" Source="Images/Logo/@0,5xenversion-logo.png" Height="40"/>

                                        <!-- Windows Buttons -->
                                        <Button Grid.Column="2" Focusable="False" Content="&#xf1c3;" Style="{StaticResource WindowControlButton}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="PreviewMouseUp">
                                                    <i:InvokeCommandAction Command="{Binding SearchCommand}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Row="1" DataContext="{x:Static local:VisitationCardListDesignModel.Instance}">

                                        <!-- Tab Content -->
                                        <local:VisitationTab />

                                        <UserControl Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <UserControl.Style>
                                                <Style TargetType="UserControl">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                                               AncestorType={x:Type Window}}, Path=DataContext.SearchActivated}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                                               AncestorType={x:Type Window}}, Path=DataContext.SearchActivated}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </UserControl.Style>
                                            <Grid Background="White" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="10*" />
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0" Height="70" Width="390">
                                                    <TextBox x:Name="SearchField" Text="{Binding SearchWord , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                             Padding="1 5 5 0"
                                                             VerticalAlignment="Center" 
                                                             FontFamily="{StaticResource LatoRegular}"
                                                             FontSize="24"
                                                             Width="350" 
                                                             Height="60"
                                                             >
                                                        <TextBox.Style>
                                                            <Style>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                                               AncestorType={x:Type Window}}, Path=DataContext.SearchActivated}" Value="True">
                                                                        <Setter Property="FocusManager.FocusedElement" Value="{Binding ElementName=SearchField}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBox.Style>
                                                        
                                                    </TextBox>
                                                </Grid>
                                                <Grid Grid.Row="1" Height="900">
 
                                                   <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0, 10, 0, 0" Grid.ColumnSpan="2" Background="Transparent" BorderThickness="1" BorderBrush="{StaticResource PrimaryColorBrush}" Width="380">
                                                    <ListBox ItemsSource="{Binding SearchResult}" SelectedItem="{Binding SelectedCard}" HorizontalAlignment="Center" BorderThickness="0" Background="{StaticResource ActiveTabColorBrush}" >
                                                        <ListBox.ItemContainerStyle>
                                                            <Style TargetType="ListBoxItem">
                                                                <Setter Property="IsSelected" Value="{Binding Content.IsSelected, Mode=TwoWay, RelativeSource={RelativeSource Self}}"/>
                                                                <Setter Property="Background" Value="Red" />
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="ListBoxItem">
                                                                            <ContentPresenter/>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </ListBox.ItemContainerStyle>

                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid>
                                                                    <local:OverviewCard Padding="0 6" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>

                                                    </ListBox>
                                                    </ScrollViewer>

                                                </Grid>

                                            </Grid>
                                        </UserControl>

                                    </Grid>
                                    
                                    

                                    <!--<TabControl Grid.Row="2" FontSize="15"  HorizontalAlignment="Center" Style="{StaticResource TabControlStyle}" DataContext="{Binding VisitationCardListViewModel}">
                                        <TabItem Header="Visitationer"  Width="130">
                                            <local:VisitationCardList VerticalAlignment="Top"/>
                                        </TabItem>
                                        <TabItem Header="Pin" Width="130" >
                                            <TextBlock Text="Hello there! Here are the pinned visitations" />
                                        </TabItem>
                                        <TabItem Header="Historik" Width="130" >
                                            <local:HistoryCardList VerticalAlignment="Top"/>
                                        </TabItem>
                                    </TabControl>-->

                                </Grid>

                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard >
                    <DoubleAnimation Duration="0:0:1" Storyboard.TargetProperty="Left" From="2520" To="1520" AccelerationRatio=".1"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Window.InputBindings>
        <KeyBinding Key="F" Modifiers="Ctrl"  Command="{Binding SearchCommand}"  />
    </Window.InputBindings>

    <WindowChrome.WindowChrome>
        <WindowChrome
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            GlassFrameThickness="0"
            CornerRadius="{Binding }"
            />
    </WindowChrome.WindowChrome>-->

</Window>
    
    
