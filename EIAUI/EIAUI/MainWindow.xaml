<Window x:Class="EIAUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:EIAUI"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        x:Name="AppWindow"
        Title="MainWindow" Height="700" Width="800"
        MinWidth="{Binding WindowMinimumWidth}"
        MinHeight="{Binding WindowMinimumHeight}"
        >
    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <!-- Outer border with the dropshadow margin -->
                        <Border Padding="{Binding OuterMarginSizeThickness}">
                            
                            <!-- Main Window outline -->
                            <Grid>
                                
                                <!-- Opacity mask for corners on grid -->
                                <Border x:Name="Container"
                                        Background="{StaticResource BackgroundColorBrush}"
                                        CornerRadius="{Binding WindowCornerRadius, FallbackValue=1}" />

                                <!-- Main window with resizable outline margin -->
                                <Border CornerRadius="{Binding WindowCornerRadius, FallbackValue=1}"
                                        Background="{StaticResource BackgroundColorBrush}">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" Opacity="0.4" />
                                    </Border.Effect>
                                </Border>

                                <!-- The main window content -->
                                <Grid>
                                    <Grid.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Container}" />
                                    </Grid.OpacityMask>

                                    <Grid.RowDefinitions>

                                        <!-- Title Bar -->
                                        <RowDefinition Height="{Binding TitleHeightGridLength, FallbackValue=40}" />

                                        <RowDefinition Height="1.5" />

                                        <!-- Window Content -->
                                        <RowDefinition Height="*" />

                                    </Grid.RowDefinitions>

                                    <!-- Title Bar -->
                                    <Grid Grid.Column="0" Panel.ZIndex="1">

                                        <Grid.ColumnDefinitions>
                                            <!-- Pre-Icon white space -->
                                            <ColumnDefinition Width="*" />
                                            <!-- Icon -->
                                            <ColumnDefinition Width="Auto" />
                                            <!-- Post-Icon white space / Title? -->
                                            <ColumnDefinition Width="8*" />
                                            <!-- Search button -->
                                            <ColumnDefinition Width="Auto" />
                                            <!-- Notification button-->
                                            <ColumnDefinition Width="Auto" />
                                            <!-- User button -->
                                            <ColumnDefinition Width="Auto" />
                                            <!-- Windows buttons -->
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <Image Grid.Column="1" Source="Images/Logo/@0,5xenversion-logo.png" Height="27"/>
  
                                        <!-- Search Button -->
                                        <Button Grid.Column="3" Content="&#xf1c3;" Style="{StaticResource WindowControlButton}" />
                                        <!-- Insert above: Command="{Binding SearchCommand}" -->
                                        
                                        <!-- Notification Button -->
                                        <Button Grid.Column="4" Content="&#xf1fe;" Style="{StaticResource WindowControlButton}" />
                                        <!-- Insert above: Command="{Binding NotificationCommand}" -->
                                      
                                        <!-- User Button --> 
                                        <Button Grid.Column="5" Content="&#xf207;" Style="{StaticResource WindowControlButton}" />
                                        <!-- Insert above: Command="{Binding UserCommand}" -->

                                        <!-- Windows Buttons -->
                                        <StackPanel Grid.Column="6" Orientation="Horizontal">
                                            <Button Command="{Binding MinimizeCommand}" Content="&#xf1eb;" Style="{StaticResource WindowControlButton}" />
                                            <Button Command="{Binding MaximizeCommand}" Content="&#xf16d;" Style="{StaticResource WindowControlButton}" />
                                            <Button Command="{Binding CloseCommand}" Content="&#xf136;" Style="{StaticResource WindowCloseButton}">
                                                
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="1" Background="{StaticResource LightTextColorBrush}">
                                    </Grid>
                                    <Grid Grid.Row="2" Background="{StaticResource BackgroundColorBrush}">
                                        <local:VisitationCardList VerticalAlignment="Top"/>
                                    </Grid>
                                </Grid>

                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            CaptionHeight="{Binding TitleHeight}"
            GlassFrameThickness="0"
            CornerRadius="{Binding }"
            />
    </WindowChrome.WindowChrome>

    

</Window>