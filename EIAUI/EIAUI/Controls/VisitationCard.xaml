<UserControl x:Class="EIAUI.VisitationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EIAUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Border Background="{StaticResource BackgroundColourBrush}" Padding="5" CornerRadius="7" Height="100" Width="300">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Opacity="0.4" />
        </Border.Effect>

        <StackPanel>
            
            <TextBlock Text="090164-4527" />
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" />
                <TextBox Grid.Column="2" />
                <Button Style="{StaticResource VisitationAcceptButton}" Grid.Column="4" />

            </Grid>


        </StackPanel>
    </Border>
    
</UserControl>
