            <ListBox x:Name="TreatmentList"   
                 Grid.Row="1" ItemsSource="{Binding PinnedVisitationCards, Mode=OneWay}"  SelectedItem="{Binding ElementName=TabContent, Path=DataContext.SelectedCard, Mode=TwoWay}" HorizontalAlignment="Center" BorderThickness="0" Width="350">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="IsSelected" Value="{Binding Content.IsSelected, Mode=TwoWay, RelativeSource={RelativeSource Self}}"/>
                        <Setter Property="Background" Value="Red" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:OverviewCard />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListBox>


        </Grid>

    </Border>

